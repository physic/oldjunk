                <SolidColorBrush Color="Green" Opacity="1.0"/>
            </Polygon.Fill>
            <Polygon.RenderTransform>
                <RotateTransform CenterX="175" CenterY="202" Angle="180" />
            </Polygon.RenderTransform>
        </Polygon>
        <Path Stroke="White" StrokeThickness="26"  
  Data="M 90,52 A 100,100 0 0 0 264,52" />
        <Path Stroke="White" StrokeThickness="26"  
  Data="M 2,202 A 300,300 0 0 0 264,52" />
        <Path Stroke="Black" StrokeThickness="20"  
  Data="M 90,52 A 100,100 0 0 0 264,52" />
